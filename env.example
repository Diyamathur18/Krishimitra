# Krishimitra AI - Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DATABASE_URL=sqlite:///db.sqlite3
# For PostgreSQL: postgresql://user:password@localhost:5432/krishimitra_db

# Redis Configuration (for caching and Celery)
REDIS_URL=redis://localhost:6379/0

# Google AI Studio Configuration
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# Ollama Configuration (Optional)
OLLAMA_BASE_URL=http://localhost:11434

# Sentry Configuration (Optional - for error monitoring)
SENTRY_DSN=your-sentry-dsn-here

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# SMS Configuration (Optional)
SMS_API_KEY=your-sms-api-key-here
SMS_API_URL=https://api.sms-provider.com

# Weather API Configuration (Real-time Government APIs)
OPENWEATHER_API_KEY=your-openweather-api-key-here
WEATHERAPI_KEY=your-weatherapi-key-here
ACCUWEATHER_API_KEY=your-accuweather-api-key-here

# Legacy weather API (deprecated - use above)
WEATHER_API_KEY=your-weather-api-key-here

# Market Data API Configuration (Optional)
MARKET_API_KEY=your-market-api-key-here

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=True
PERFORMANCE_MONITORING_RETENTION_DAYS=7

# Production Settings (for deployment)
DJANGO_SETTINGS_MODULE=core.settings
PYTHONPATH=/app



